{
  "compilerOptions": {
    "outDir": ".build",
    "sourceMap": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "lib": ["es2017","es2015","dom","es6"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules", ".build"]
}
